// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nome      String   @db.VarChar(255)
  email     String   @unique @db.VarChar(255)
  senhaHash String   @db.VarChar(255)
  role      String   @db.VarChar(50)
  telefone  String?  @db.VarChar(20)
  foto      String?  @db.Text
  criadoEm  DateTime @default(now())
  pedidos   Pedido[]

  @@map("users")
}

model Mesa {
  id       Int      @id @default(autoincrement())
  nome     String   @db.VarChar(100)
  status   String   @default("livre") @db.VarChar(50)
  criadoEm DateTime @default(now())
  pedidos  Pedido[]

  @@map("mesas")
}

model Prato {
  id        Int          @id @default(autoincrement())
  nome      String       @db.VarChar(255)
  descricao String?      @db.Text
  preco     Decimal      @db.Decimal(10, 2)
  categoria String       @db.VarChar(100)
  ativo     Boolean      @default(true)
  criadoEm  DateTime     @default(now())
  itens     PedidoItem[]

  @@map("pratos")
}

model Pedido {
  id             Int          @id @default(autoincrement())
  mesaId         Int
  mesa           Mesa         @relation(fields: [mesaId], references: [id])
  garcomId       Int
  garcom         User         @relation(fields: [garcomId], references: [id])
  status         String       @default("aberto") @db.VarChar(50)
  total          Decimal      @default(0) @db.Decimal(10, 2)
  formaPagamento String?      @db.VarChar(50)
  criadoEm       DateTime     @default(now())
  finalizadoEm   DateTime?
  itens          PedidoItem[]

  @@map("pedidos")
  @@index([mesaId])
  @@index([garcomId])
  @@index([status])
}

model PedidoItem {
  id         Int     @id @default(autoincrement())
  pedidoId   Int
  pedido     Pedido  @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  pratoId    Int
  prato      Prato   @relation(fields: [pratoId], references: [id])
  quantidade Int
  observacao String? @db.Text
  subtotal   Decimal @db.Decimal(10, 2)

  @@map("pedido_itens")
  @@index([pedidoId])
  @@index([pratoId])
}
